SELECT SUM(poster_qty) AS poster
  FROM orders;


SELECT SUM(standard_qty) AS standard
  FROM orders;


SELECT SUM(total_amt_usd) AS total_dollar_amount_of_sales
  FROM orders;


SELECT (standard_amt_usd + gloss_amt_usd) AS total_amt_spend_stndrd_gloss
  FROM orders;


SELECT SUM(standard_amt_usd)/SUM(standard_qty) AS standard_price_per_unit
  FROM orders;
